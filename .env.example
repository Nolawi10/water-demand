# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=change-this-to-a-secret-key

# Database Configuration
DATABASE_URL=sqlite:///app.db
# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/water_demand

# File Uploads
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Email Configuration
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@example.com

# API Configuration
API_PREFIX=/api/v1
API_TITLE=Water Demand API
API_VERSION=1.0.0

# Model Configuration
MODEL_PATH=./models/water_demand_model.pkl
FEATURE_IMPORTANCE_PATH=./models/feature_importance.json

# Redis (for background tasks)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Security
SESSION_COOKIE_SECURE=True
REMEMBER_COOKIE_SECURE=True
RATELIMIT_DEFAULT=200 per day
RATELIMIT_STRATEGY=move-forward
